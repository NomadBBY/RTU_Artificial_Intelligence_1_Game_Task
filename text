def __init__(self):
        self.game_screen = None
        self.hounds = [(0, 1), (0, 3), (0, 5), (0, 7)]
        self.fox = (7, 4)

    def ask_for_hound_coordinates(self):
        print("Enter new coordinates for each hound:")
        new_hounds = []
        for i in range(len(self.hounds)):
            while True:
                try:
                    x = int(input(f"Enter x-coordinate for hound {i + 1}: "))
                    y = int(input(f"Enter y-coordinate for hound {i + 1}: "))
                    if (x, y) not in new_hounds and 0 <= x < SQUARE_SIZE and 0 <= y < SQUARE_SIZE:
                        new_hounds.append((x, y))
                        break
                    else:
                        print("Invalid coordinates. Please enter again.")
                except ValueError:
                    print("Invalid input. Please enter integers.")
    
        self.hounds = new_hounds